<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_login"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="70dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="#F7EBD5"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"/>
        <view
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:backgroundTint="#F7EBD5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_round_white"
            android:hint="닉네임"
            android:paddingLeft="20dp"
            android:radius="10dp"
            android:singleLine="true"
            android:textColor="#5D5D79"/>

        <LinearLayout
            android:id="@+id/emailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            >
             <EditText
                android:id="@+id/email"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:background="@drawable/edit_round_white"
                android:textColor="#5D5D79"
                android:layout_weight="9"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/EmailAuthorizeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FBD3CB"
                android:textColor="#5D5D79"
                android:textSize="15dp"
                android:text="인증" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/email_check_Li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:visibility="gone"
            >

            <EditText
                android:id="@+id/email_check"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:hint="인증번호"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@drawable/edit_round_white"
                android:textColor="#5D5D79"
                android:layout_weight="9"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/email_check_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FBD3CB"
                android:textColor="#5D5D79"
                android:text="확인하기"/>
        </LinearLayout>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/edit_round_white"
            android:textColor="#5D5D79"
            android:paddingLeft="20dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/pwd2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@drawable/edit_round_white"
            android:textColor="#5D5D79"
            android:paddingLeft="20dp"
            android:layout_margin="10dp"/>
        <android.widget.Button
            android:id="@+id/signupBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_round_btn"
            android:text="회원가입"
            android:textColor="#5D5D79"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            />
    </LinearLayout>

</LinearLayout>