<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/setting_back">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="140dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY"
            android:gravity="center"
            android:textColor="#F7EBD5"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#F7EBD5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50px">

        <TextView
            android:id="@+id/setNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:text="신나"
            android:textColor="#5D5D79"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/setId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="usuny0317@naver.com"
            android:textColor="#5D5D79"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/setUpdate"
            android:layout_width="370px"
            android:layout_height="match_parent"
            android:background="@drawable/login_round_btn"
            android:text="수정하기"
            android:textColor="#5D5D79"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />
        <android.widget.Button
            android:id="@+id/setLogout"
            android:layout_width="370px"
            android:layout_height="match_parent"
            android:background="@drawable/login_round_btn"
            android:text="로그아웃"
            android:textColor="#5D5D79"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/setNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="공지사항"
            android:textColor="#5D5D79"
            android:layout_gravity="center"
            android:layout_marginBottom="45px"/>
        <TextView
            android:id="@+id/setAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="문의하기"
            android:textColor="#5D5D79"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>