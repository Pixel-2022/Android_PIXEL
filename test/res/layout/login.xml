<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/back_login">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="140dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="#F7EBD5"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:backgroundTint="#F7EBD5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="50px"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:background="@drawable/edit_round_white"
            >

            <EditText
                android:id="@+id/logEmail"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_round_white"
                android:textColor="#5D5D79"
                android:hint=" 이메일"
                android:drawableLeft="@drawable/login_image1_2"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:background="@drawable/edit_round_white"
            >
            <EditText
                android:id="@+id/logpass"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_round_white"
                android:textColor="#5D5D79"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/login_image2_2"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/login"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/login_round_btn"
            android:text="로그인"
            android:textSize="18dp"
            android:textColor="#5D5D79"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginRight="170px"
        >
        <TextView
            android:id="@+id/joinin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F7EBD5"
            android:textSize="40px"
            android:text="회원가입"
            android:layout_marginRight="30px"
            android:layout_gravity="right"
            android:drawableRight="@drawable/chevron_right"/>
        <TextView
            android:id="@+id/findpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F7EBD5"
            android:textSize="40px"
            android:text="비밀번호 찾기"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:layout_gravity="right"
            android:drawableRight="@drawable/chevron_right"/>


    </LinearLayout>

</LinearLayout>